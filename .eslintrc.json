{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "standard",
  "plugins": ["jest"],
  "env": {
    "node": true,
    "jest": true,
    "jest/globals": true
  },
  "rules": {
    "semi": [
      1,
      "always"
    ],
    "indent": [
      2,
      "tab",
      {"SwitchCase": 1}
    ],
    "no-tabs": 0,
    "quotes": [2, "double"]
  }
}
