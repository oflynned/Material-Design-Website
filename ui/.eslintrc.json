{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "jest": true,
    "jest/globals": true
  },
  "plugins": [ "jest" ],
  "rules": {
    "semi": [
      1,
      "always"
    ],
    "indent": [
      2,
      "tab",
      {"SwitchCase": 1}
    ],
    "no-tabs": 0,
    "quotes": [2, "double"]
  }
}
