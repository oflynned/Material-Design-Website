<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell" style="text-align: center">
        <h2>Language Experience</h2>
    </div>
    <div class="mdl-layout-spacer"></div>
</div>
<div class="mdl-grid load-animations">
    {{#each languages}}
        <div class="mdl-cell">
            <div class="mdl-card mdl-shadow--2dp tile">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">{{language}}</h2>
                </div>
                <div class="mdl-card__supporting-text" style="min-height: 75px">{{description}}</div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
                       href="https://github.com/oflynned?language={{url}}&tab=repositories" target="_blank">
                        View GitHub Repos
                    </a>
                </div>
            </div>
        </div>
    {{/each}}
</div>