<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell" style="text-align: center">
        <h2>Work Experience</h2>
    </div>
    <div class="mdl-layout-spacer"></div>
</div>
<div class="mdl-grid load-animations">
    {{#each jobs}}
        <div class="mdl-cell" style="width: auto; margin: 0 auto; padding: 10px">
            <div class="mdl-card mdl-shadow--2dp">
                <img src="{{image}}" class="logo-image"/>
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">{{employer}}</h2>
                </div>
                <div class="mdl-card__supporting-text">{{location}}</div>
                <div class="mdl-card__supporting-text">{{period}}</div>
                <div class="mdl-card__supporting-text">{{title}}</div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
                       href="{{url}}" target="_blank">
                        View Website
                    </a>
                </div>
            </div>
        </div>
    {{/each}}
</div>