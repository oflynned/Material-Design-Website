<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell" style="text-align: center">
        <h3>{{data.length}}
            {{#compare data.length "===" 1}}
                result
            {{else}}
                results
            {{/compare}}
            for {{searchQuery}}
        </h3>
        <h4><a href="/tearma">Search again?</a></h4>
    </div>
    <div class="mdl-layout-spacer"></div>
</div>

<div class="mdl-grid load-animations">
    <!-- en search for a ga result -->
    {{#compare data.length ">" "0"}}
        {{#if lang_en}}
            {{#each data}}
                <div class="mdl-cell">
                    <div class="mdl-card mdl-shadow--2dp result-card">
                        {{#each mutations}}
                            <h2 class="mdl-card__title-text">{{root}}</h2>
                        {{/each}}
                        <h3 class="mdl-card__title-text">{{searchTerm}}</h3>
                        {{#compare searchType "===" "noun"}}
                            {{#each mutations}}
                                <div>{{#if genSing}}gs: {{genSing}}{{/if}}
                                    {{#if nomPlu}} np: {{nomPlu}}{{/if}}
                                    {{#if genPlu}} gp: {{genPlu}}{{/if}}</div>
                            {{/each}}
                        {{else}}
                            {{#compare searchType "===" "verb"}}
                                {{#each mutations}}
                                    <div>{{#if gerund}}gerund: {{gerund}}{{/if}}
                                        {{#if participle}} participle: {{participle}}{{/if}}</div>
                                {{/each}}
                            {{/compare}}
                        {{/compare}}
                        {{#compare searchType "===" "noun"}}
                            <!-- check if declension exists given it's a noun -->
                            <div>{{searchType}}
                                {{#compare declension "===" -1}}
                                    / {{gender}}
                                {{else}}
                                    / declension {{declension}} / {{gender}}
                                {{/compare}}</div>
                        {{else}}
                            <div>{{searchType}}</div>
                        {{/compare}}
                        <br>
                        {{#each domains}}
                            <div>{{en}}</div>
                            <div>{{ga}}</div>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        {{else}}
            <!-- ga word looking for en result -->
            {{#each data}}
                <div class="mdl-cell">
                    <div class="mdl-card mdl-shadow--2dp result-card">
                        {{#each mutations}}
                            <h2 class="mdl-card__title-text">{{root}}</h2>
                        {{/each}}
                        <h3 class="mdl-card__title-text">{{searchTerm}}</h3>
                        {{#compare searchType "===" "noun"}}
                            {{#each searchMutations}}
                                <div>{{#if genSing}}gs: {{genSing}}{{/if}}
                                    {{#if nomPlu}} np: {{nomPlu}}{{/if}}
                                    {{#if genPlu}} gp: {{genPlu}}{{/if}}</div>
                            {{/each}}
                        {{else}}
                            {{#compare searchType "===" "verb"}}
                                {{#each mutations}}
                                    <div>{{#if gerund}}gerund: {{gerund}}{{/if}}
                                        {{#if participle}} participle: {{participle}}{{/if}}</div>
                                {{/each}}
                            {{/compare}}
                        {{/compare}}
                        <div>{{searchType}}
                            {{#compare searchType "==" "noun"}}
                                {{#compare declension "==" "-1"}}
                                    / {{gender}}
                                {{else}}
                                    / declension {{declension}} / {{gender}}
                                {{/compare}}
                            {{/compare}}</div>
                        <br>
                        {{#each domains}}
                            <div>{{en}}</div>
                            <div>{{ga}}</div>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        {{/if}}
    {{else}}
        <div class="mdl-cell">
            <div class="mdl-card mdl-shadow--2dp result-card">
                <h2 class="mdl-card__title-text">{{searchQuery}}</h2>
                <h3>No results!</h3>
                <br>
                <div>Make sure the switch is on if searching for English words and that everything is spelled
                    correctly
                </div>
            </div>
        </div>
    {{/compare}}
</div>